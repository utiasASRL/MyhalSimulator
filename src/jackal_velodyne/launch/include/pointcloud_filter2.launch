        </group>

        <group if="$(eval arg('loc_method')==1)">
            <!-- only launch these filters if we are running amcl -->
            <node pkg="jackal_velodyne" type="pcl_filter_node" name="amcl_filter">
                <remap from="cloud_in" to="/velodyne_points"/>
